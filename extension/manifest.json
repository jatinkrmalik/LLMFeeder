{
  "manifest_version": 3,
  "name": "LLMFeeder - Web to Markdown Converter",
  "version": "2.0.0",
  "description": "Web to Markdown converter for ChatGPT, Claude & AI. Extract clean content, copy to clipboard. Now with dark mode.",
  "author": "@jatinkrmalik",
  "browser_specific_settings": {
    "gecko": {
      "id": "llmfeeder@j47.in",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "clipboardWrite",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "libs/readability.js",
        "libs/turndown.js",
        "content.js"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+L",
        "mac": "Alt+Shift+L"
      },
      "description": "Open Web to Markdown Converter"
    },
    "convert_to_markdown": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "Alt+Shift+M"
      },
      "description": "Convert webpage to Markdown for ChatGPT & AI"
    },
    "download_markdown": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "Download webpage as Markdown file"
    },
    "download_zip": {
      "suggested_key": {
        "default": "Alt+Shift+Z",
        "mac": "Alt+Shift+Z"
      },
      "description": "Download multiple tabs as ZIP archive"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
